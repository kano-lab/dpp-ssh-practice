if [ -n "$SSH_TTY" ] && [ -z "$SUDO_USER" ] && [ "$SHLVL" = 1 ]; then
  echo -e "\033[0;32m=================================\033[0m"
  echo -e "\033[0;33m公開鍵認証でログインに成功しました！おめでとう！\033[0m"
  echo -e "\033[0;36m$(whoami)さん SSH演習環境へようこそ！\033[0m"
  echo -e "\033[0;35m$(date)\033[0m"
  echo -e "\033[0;32m=================================\033[0m"
fi
